<div id="body-wrapper" class="container center-align">
  <form class="row">
      <div class="card col s10 offset-s1 ">
          <div class="form-group form-div col s6 offset-s3">
              <label class="indigo-text" for="input-id">Usuario</label>
              <input type="text" class="form-control" id="input-user-r" name="usuario" placeholder="usuario">
          </div>
          <div class="form-group form-div col s6 offset-s3">
              <label class="indigo-text" for="input-mail-r">Email</label>
              <input type="text" class="form-control" id="input-mail-r" name="email" placeholder="email">
          </div>
          <div class="form-group col s6 offset-s3">
              <label class="indigo-text" for="input-name">Contraseña</label>
              <input type="password" class="form-control" id="input-password-r" name="contraseña" placeholder="contraseña">
          </div>
          <div class="form-group col s6 offset-s3">
              <label class="indigo-text" for="input-name">Repetir contraseña</label>
              <input type="password" class="form-control" id="input-password2-r" name="contraseña" placeholder="contraseña">
          </div><br>
          <br>
          <div class="form-group col s6 offset-s3">
          <button id="btn-register" class="waves-effect waves-light btn indigo">Enviar</button>
          </div>
           <div class="col s6">
            <span class="error green-text" id="errPasswd"></span>
          </div>
          <br><br>
      </div>
  </form>
 
  <div class="form-group col s6 offset-s3">
    <a href="/login" class="amber-text">Volver al Login</a>
  </div>
</div>